@*
    Estabelecer a relação entre a view e o model
*@
@model Colab

@{
    @* definir o nome da view e estabelecer a comunicação entre a view e a action no controller*@
    ViewData["Title"] = "Update";
}

@*definir a estrutura html da view*@

<a asp-action = "Index">Listar Registros</a>

<h2>Atualizar Registro</h2>

<form method="post">
    <p>
        <label asp-for = "Nome">Nome</label>
        <input asp-for = "Nome" />
        <span asp-validation-for="Nome"></span>
    </p>

    <p>
        <label asp-for = "Idade">Idade</label>
        <input asp-for = "Idade" />
        <span asp-validation-for="Idade"></span>
    </p>

    <p>
        <label asp-for = "Salario">Salario</label>
        <input asp-for = "Salario" />
        <span asp-validation-for="Salario"></span>
    </p>

    <p>
        <label asp-for = "Departamento">Departamento</label>
        <select asp-for = "Departamento">
            <option value = "Dev">Dev</option>
            <option value = "Rh">Rh</option>
            <option value = "Financeiro">Financeiro</option>
        </select>
    </p>

    <p>
        <label asp-for = "Genero">Genero</label>
        <input type = "radio" asp-for = "Genero" value = "M" /> Masculino
        <input type = "radio" asp-for = "Genero" value = "F" /> Feminino
        <input type = "radio" asp-for = "Genero" value = "O" /> Outros
        <span asp-validation-for="Genero"></span>
    </p>

    <p>
        <button type = "submit">Atualizar</button>
    </p>
</form>