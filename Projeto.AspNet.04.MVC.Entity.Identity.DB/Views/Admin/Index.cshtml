@*definir a "comunicação" entre a view e seu respectivo model - AppUser
    O model AppUser - a representação da table do DB, aqui, na aplicação - será vinculado à view dentro do contexto da interface IEnumerable(para que seus dados sejam elementos enumeraveis/iterariveis)
*@

@model IEnumerable<AppUser> 


@{
    ViewData["Title"] = "Listar";
}

@* definir a estrutura html necessaria*@

<h3 class="bg-info text-white">@ViewData["Title"]</h3>

<a asp-action="Create" class="btn btn-secondary">Criar Registro</a>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Atualizar</th>
            <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach(AppUser registro in Model){
        <tr>
            <td>@registro.Id</td>
            <td>@registro.UserName</td>
            <td>@registro.Email</td>
            <td>
                <a
                    class="btn btn-sm btn-primary"
                    asp-action="Update"
                    asp-route-id="@registro.Id">
                    Atual./Alter
                </a>
            </td>
            <td>
                <form
                    asp-action="Delete"
                    asp-route-id="@registro.Id"
                    method="post">
                    <button
                        type="submit"
                        class="btn btn-sm btn-danger">
                        Excluir
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
